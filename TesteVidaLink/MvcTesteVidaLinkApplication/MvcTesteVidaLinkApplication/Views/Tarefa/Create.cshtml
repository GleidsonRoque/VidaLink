@model MvcTesteVidaLinkApplication.Models.Tarefa

@{
    ViewBag.Title = "Create";
}
<div style="background:whitesmoke">
    <div class="jumbotron">
        <h2 style="color:steelblue">Cadastro de Tarefas</h2>
    </div>
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <fieldset>
                <div class="editor-label">
                    @Html.LabelFor(model => model.nm_Titulo)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.nm_Titulo)
                    @Html.ValidationMessageFor(model => model.nm_Titulo)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.nm_descricao)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.nm_descricao)
                    @Html.ValidationMessageFor(model => model.nm_descricao)
                </div>

                <div class="editor-label">
                    @Html.LabelFor(model => model.dt_Execucao)
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.dt_Execucao)
                    @Html.ValidationMessageFor(model => model.dt_Execucao)
                </div>
                <div style="margin-top:30px"/>
                <div>
                    <input type="submit" value="Cadastrar Tarefa" class="btn btn-primary" />
                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-secondary" } )
                </div>
            </fieldset>
        }
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
</div>